---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<style lang="scss">
  .hero-mentions {
    background: linear-gradient(135deg, #080f25 0%, #1a2847 100%);
    text-align: center;
    padding: 3rem 1rem;
    color: white;

    h1 {
      font-size: clamp(2rem, 5vw, 3rem);
      margin-bottom: 0.5rem;
    }

    p {
      font-size: 1.1rem;
      opacity: 0.9;
    }
  }

  .mentions-content {
    font-size: 0.95rem;
    line-height: 1.6;

    h2 {
      font-size: 1.4rem;
      color: white;
      border-bottom: 2px solid #ea475f;
      padding-bottom: 0.5rem;
      margin-top: 2rem;
      margin-bottom: 1rem;

      &:first-of-type {
        margin-top: 0;
      }
    }

    h3 {
      font-size: 1.1rem;
      color: rgba(255, 255, 255, 0.95);
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
      font-weight: 600;
    }

    .info-box {
      background: rgba(255, 255, 255, 0.05);
      border-left: 4px solid #92dbf5;
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 0.5rem;

      p {
        margin-bottom: 0.4rem;
        font-size: 0.9rem;
        
        strong {
          color: #92dbf5;
        }
      }

      p:last-child {
        margin-bottom: 0;
      }
    }

    .highlight-box {
      background: rgba(234, 71, 95, 0.1);
      border: 1px solid rgba(234, 71, 95, 0.3);
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 0.5rem;
      font-size: 0.9rem;

      p {
        margin-bottom: 0.5rem;
      }

      ul {
        margin: 0.5rem 0 0 1.5rem;
        
        li {
          margin-bottom: 0.3rem;
        }
      }
    }

    p {
      margin-bottom: 0.75rem;
    }

    ul {
      margin-left: 1.5rem;
      margin-bottom: 1rem;
      
      li {
        margin-bottom: 0.4rem;
      }
    }

    .date-update {
      text-align: center;
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      font-style: italic;
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.85rem;
    }

    a {
        color: inherit;
        text-decoration: none;
        
        &:hover {
        text-decoration: underline;
        }
    }
  }

  @media (max-width: 768px) {
    .hero-mentions {
      padding: 2rem 1rem;
    }

    .mentions-content {
      font-size: 0.9rem;

      h2 {
        font-size: 1.2rem;
      }

      h3 {
        font-size: 1rem;
      }
    }
  }
</style>

