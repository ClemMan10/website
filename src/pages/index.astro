        const mq = window.matchMedia("(max-width: 768px)");
        if (!mq.matches) return; // Desktop : rien √† faire

    // prefer picture elements (we replaced imgs with <picture>)
    const imgs = Array.from(carousel.querySelectorAll('picture'));
        const total = imgs.length;

        // Cloner les images pour la boucle 
        imgs.forEach(img => {
          const clone = img.cloneNode(true);
          carousel.appendChild(clone);
        });

  let index = 0;
  // use clientWidth for a stable width measurement
  let imgWidth = carousel.clientWidth;

        // Scroll automatique
        let interval = setInterval(() => {
          index++;
          carousel.scrollTo({ left: imgWidth * index, behavior: 'smooth' });

          if (index >= total) {
            // reset invisible apr√®s animation
            setTimeout(() => {
              carousel.scrollLeft = 0;
              index = 0;
            }, 300); // dur√©e correspond √† smooth scroll
          }
        }, 3000);
        // Ajuster resize
        window.addEventListener('resize', () => {
          imgWidth = carousel.clientWidth;
          carousel.scrollLeft = imgWidth * index;
        });
        // Swipe manuel : reset index quand on swipe
        let isDragging = false;
        let startX = 0;
        carousel.addEventListener('touchstart', (e) => {
          isDragging = true;
          if (e instanceof TouchEvent) {
            startX = e.touches[0]?.pageX || 0;
          } else {
            startX = 0;
          }
        });
        carousel.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          if (e instanceof TouchEvent) {
            const currX = e.touches[0]?.pageX || 0;
            const dx = startX - currX;
            carousel.scrollLeft += dx;
            startX = currX;
          }
        });
        carousel.addEventListener('touchend', () => {
          isDragging = false;
          // recalculer l'index sur l'image la plus proche
          index = Math.round(carousel.scrollLeft / imgWidth) % total;
          // forcer le scroll sur l'image exacte
          carousel.scrollTo({ left: imgWidth * index, behavior: 'smooth' });
        });
      });
    });

