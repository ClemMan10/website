    document.addEventListener("DOMContentLoaded", () => {
      const wrapper = document.querySelector(".videos-wrapper");
      if (!wrapper) return;

  const videos = wrapper.querySelector(".videos");
  const button = wrapper.querySelector(".toggle-videos");
  // ensure required elements exist and are HTMLElements for .style/.classList
  if (!(videos instanceof HTMLElement) || !(button instanceof HTMLElement)) return;
  const videosEl = videos as HTMLElement;
  const buttonEl = button as HTMLElement;
  const icon = buttonEl.querySelector("i");

      // MediaQuery et helper pour g√©rer l'affichage du bouton en live (resize)
      const mq = window.matchMedia("(max-width: 768px)");

      function updateVisibility() {
        if (mq.matches) {
          // mobile -> activer le bouton
          buttonEl.style.display = "flex";
          buttonEl.removeAttribute("aria-hidden");
        } else {
          // desktop -> masquer le bouton absolument, et reset l'√©tat
          buttonEl.style.display = "none";
          buttonEl.setAttribute("aria-hidden", "true");
          videosEl.classList.remove("expanded");
          // s'assurer que l'ic√¥ne est en √©tat plus
          if (icon) {
            icon.classList.remove("fa-minus");
            icon.classList.add("fa-plus");
          }
        }
      }

      // initial
      updateVisibility();
      // √©couter changement de breakpoint (responsive)
      if (typeof mq.addEventListener === "function") {
        mq.addEventListener("change", updateVisibility);
      } else if (typeof mq.addListener === "function") {
        mq.addListener(updateVisibility);
      }

      // click handler (ne sera utilisable que si le bouton est visible)
      button.addEventListener("click", (e) => {
        e.preventDefault();

  // si bouton cach√© pour une raison, on ignore
  if (getComputedStyle(buttonEl).display === "none") return;

        // Toggle class
  const expanded = videosEl.classList.toggle("expanded");

        // changer ic√¥ne + / -
        if (icon) {
          icon.classList.toggle("fa-plus", !expanded);
          icon.classList.toggle("fa-minus", expanded);
        }

        // Pour s'assurer que l'ouverture montre TOUT le contenu, on utilise
        // scrollHeight et on applique inline maxHeight (meilleure UX que
        // fixer une valeur arbitraire comme 1000px). On remet √† la valeur
        // CSS par d√©faut au collapse en supprimant le style inline.
        if (expanded) {
          // force l'ouverture compl√®te (animation fluide si CSS transition sur max-height)
          videosEl.style.maxHeight = videosEl.scrollHeight + "px";
        } else {
          // reset: laisse la r√®gle CSS (collapsed) s'appliquer
          videosEl.style.maxHeight = "";
        }


      // Si la fen√™tre est redimensionn√©e alors que la section est ouverte,
      // on recalcule la hauteur pour rester enti√®rement visible.
      window.addEventListener('resize', () => {
        if (videosEl.classList.contains('expanded')) {
          videosEl.style.maxHeight = videosEl.scrollHeight + 'px';
