---
import Layout from '../layouts/Layout.astro';
---

<style>
  body {
    font-family: 'Open Sans', sans-serif;
  }

  .videos {
    display: flex;
    flex-flow: row wrap;
    gap: 1rem;
  }

  .pattern {
    font-size: 1.5rem;
    background-image: url('/website/pattern.svg');
    background-position: center;
    background-attachment: fixed;
    color: black;
    grid-column: full-width;
    margin: unset;
    padding: 2rem;
  }

  .filled {
    background-color: rgb(8, 15, 37);
    color: white;
    grid-column: full-width;
  }

  h1 {
    text-transform: uppercase;
    &, .filled {
      text-align:center;
      vertical-align: middle;
    }
  }

  section {
    display: grid;
    grid-template-columns: minmax(1rem, 10rem) minmax(20rem, 1fr) minmax(1rem, 10rem);
    & > * {
      grid-column: 2;
    }
  }

</style>
