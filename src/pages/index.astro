function ensureTrailing(href: string) {
  if (!href) return href;
  if (href.startsWith('http') || href.startsWith('mailto:') || href.startsWith('tel:')) return href;
  if (href.startsWith('#')) return href;
  const [base, hash] = href.split('#');
  let b = base || '/';
  if (!b.startsWith('/')) b = '/' + b;
  if (b !== '/' && !b.endsWith('/')) b = b + '/';
  return hash ? `${b}#${hash}` : b;
}
