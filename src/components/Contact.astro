<style lang="scss">
  @use "bulma/sass/layout/footer" with (
    $footer-background-color: rgb(8, 15, 37)
  );
  @use "bulma/sass/grid/columns";

  .social-row {
    gap: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.25rem !important;
    padding-bottom: 0 !important;
  }
  .columns.social-row {
    margin-bottom: 0 !important;
  }

  .social-icon {
    position: relative;            /* pour superposer les 2 glyphes */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
    transition: transform 0.18s ease;
    vertical-align: middle;
    display: inline-block;
  }

  /* Les deux couches (solide + gradient) */
  .social-icon .icon-layer {
    position: absolute;
    inset: 0;                      /* full size du parent */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;             /* taille de l'icône à ajuster si besoin */
    line-height: 1;
    transition: opacity 0.28s ease;
    pointer-events: none;          /* seule l'ancre reçoit le click */
  }

  /* couche solide (gris) */
  .social-icon .icon-solid {
    color: #cbd5e1;
    opacity: 1;
  }

  /* couche gradient (initialement invisible) */
  .social-icon .icon-grad {
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    /* gradient par défaut ; on peut personnaliser par réseau */
    background-image: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #bc1888);
    opacity: 0;
  }

  /* Au hover : swap par opacité (plus fluide que changement de color) */
  .social-icon:hover { transform: scale(1.08); }
  .social-icon:hover .icon-solid { opacity: 0; }
  .social-icon:hover .icon-grad  { opacity: 1; }

  /* variantes réseaux */
  .social-icon.youtube .icon-solid { color: #cbd5e1; } /* youtube gère couleur seule */
  .social-icon.youtube:hover .icon-solid { color: #ff0000; opacity: 1; } /* pas de grad */

  .social-icon.instagram .icon-grad {
    background-image: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #bc1888);
  }

  .social-icon.tiktok .icon-grad {
    background-image: linear-gradient(45deg, #25f4ee, #fe2c55);
  }

  /* Se concentrer sur l'accessibilité */
  .social-icon:focus { outline: 3px solid rgba(99,102,241,0.14); outline-offset: 3px; }

  /* Assure que le seul <i> de YouTube garde bien sa couleur et sa taille */
  .social-icon.youtube > i {
    font-size: 2.4rem; /* même taille que les layers */
    color: #cbd5e1;    /* gris par défaut */
    transition: color 0.22s ease, filter 0.25s ease;
    position: absolute;
    inset: 0;                     /* full size du parent */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;            /* même taille que .icon-layer */
    line-height: 1;
    pointer-events: none;         /* click géré par le <a> parent */
  }

  /* Au hover, passe en rouge avec une légère lueur */
  .social-icon.youtube:hover > i {
    color: #ff0000;
    filter: drop-shadow(0 2px 8px rgba(255,0,0,0.22));
  }
  
  footer { 
    padding: 0.75rem 0 0.5rem 0; 
    position: relative;
  }
  .footer-info {
    position: absolute;
    bottom: 0.75rem;
    right: 1rem;
    text-align: right;
    font-size: 0.75rem;
    color: rgba(203, 213, 225, 0.7);
    line-height: 1.4;

    a {
      color: rgba(203, 213, 225, 0.7);
      text-decoration: underline;
      transition: color 0.2s ease;
      margin-left: 1rem;

      &:hover {
        color: #cbd5e1;
      }
    }
  }
  .footer-contact {
    display: grid;
    grid-template-columns: 1rem minmax(0, 1fr) 1rem;
    margin-bottom: 0.5rem;
    font-size: 0.75rem;
    color: rgba(203, 213, 225, 0.9);
    line-height: 1.6;

    @media (min-width: 768px) {
      grid-template-columns: minmax(1rem, 1fr) minmax(20rem, 3fr) minmax(1rem, 1fr);
    }

    .contact-lines {
      grid-column: 2;
    }

    .contact-line {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: 0.5rem;
      margin-bottom: 0.3rem;

      i {
        font-size: 0.9rem;
        color: rgba(203, 213, 225, 0.7);
        width: 1rem;
      }

      a {
        color: inherit;
        text-decoration: none;
        
        &:hover {
          color: #cbd5e1;
          text-decoration: underline;
        }
      }
    }
  }

  @media (max-width: 768px) {
    .footer-info {
      position: static;
      text-align: center;
      margin-top: 1rem;
      padding-top: 1rem;
      border-top: 1px solid rgba(203, 213, 225, 0.2);
    }
  }
</style>

